= form_for @option do |f|
  - if @option.errors.any?
    #error_explanation
      %h2= "#{pluralize(@option.errors.count, "error")} prohibited this option from being saved:"
      %ul
        - @option.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :class
    = f.text_field :class
  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :product_id
    = f.number_field :product_id
  .actions
    = f.submit 'Save'
