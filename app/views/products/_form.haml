
= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this option from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :Name
    = f.text_field :name
  .field
    = f.label :Description
    = f.text_field :description
  .field
    = f.label :Price
    = f.number_field :price
  .actions
    = f.submit 'Save'
