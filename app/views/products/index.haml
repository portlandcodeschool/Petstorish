:javascript
  globalMonkey = $('.monkey').offset().top;
  globalMonkeyTarget = 0;
  function monkeyBusiness (activeDivisionByZero) {
    var goHere = activeDivisionByZero.offset();
    console.log('looool!');
    var placeGo = goHere.top - globalMonkey;
    if (placeGo !== globalMonkeyTarget){
      console.log(placeGo);
      $('.monkey').stop();
      $('.monkey').animate({
        top: placeGo-70+"px"}, 920
      );
    }
  //only change on event different thingy
  }
- @products.each do |product|

  .product-listing{:onmouseover=> 'monkeyBusiness($(this));'}
    .picture
      - if product.image?
        = image_tag product.image.url(:thumbnail)
    .price
      = number_to_currency(product.price)
      %span.name
        = product.name
    .links
      = link_to 'Show', product
      = link_to 'Edit', edit_product_path(product)
      = link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }

= paginate @products


